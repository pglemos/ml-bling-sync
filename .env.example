# =============================================================================
# SaaS White-Label Dropshipping Platform - Environment Configuration
# =============================================================================

# Database Configuration (Supabase/PostgreSQL)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
DATABASE_URL=postgresql://user:password@localhost:5432/ml_bling_sync

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
API_SECRET_KEY=your_api_secret_key_here
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Multi-Tenant Configuration
TENANT_ISOLATION_ENABLED=true
DEFAULT_TENANT_ID=default

# Supplier Connectors Configuration
# Shopify
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret

# Nuvem Shop
NUVEMSHOP_CLIENT_ID=your_nuvemshop_client_id
NUVEMSHOP_CLIENT_SECRET=your_nuvemshop_client_secret

# Bling/Wedrop
BLING_CLIENT_ID=your_bling_client_id
BLING_CLIENT_SECRET=your_bling_client_secret
BLING_API_URL=https://api.bling.com.br/v3

# Marketplace Connectors Configuration
# Mercado Livre
ML_CLIENT_ID=your_ml_client_id
ML_CLIENT_SECRET=your_ml_client_secret
ML_REDIRECT_URI=http://localhost:3000/auth/ml/callback

# Amazon
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_MARKETPLACE_ID=your_amazon_marketplace_id

# Shopee
SHOPEE_PARTNER_ID=your_shopee_partner_id
SHOPEE_PARTNER_KEY=your_shopee_partner_key

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="ML Bling Sync"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_SUPPORT_EMAIL=support@mlblingsync.com

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Sync Configuration
SYNC_BATCH_SIZE=50
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY_MS=5000
INVENTORY_SYNC_INTERVAL_MINUTES=15

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@mlblingsync.com

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_S3_BUCKET=your_s3_bucket_name
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Development Configuration
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true